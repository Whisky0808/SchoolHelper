.dom{
  width: 100%;
  height: 100%;
  background-color: rgba(0,0,0,0.5);
  position: fixed;
  z-index: 2;
  top: 0;
}
.box{
  width: 600rpx;
  height: 400rpx;
  background-color: white;
  position: relative;
  top: 400rpx;
  left: 80rpx;
  border-radius: 50rpx;
}

.cut .cutbtn, .add .addbtn{
  width: 60rpx;
  height: 60rpx;
  line-height: 60rpx;
  padding: 5rpx;
  border-radius: 100rpx;
  background-color: #f7c32f;
  margin: 0 6rpx;
}
.cut, .add{
  display: inline-block;
}
.controlNum{
  position: relative;
  height: 60rpx;
  line-height: 60rpx;
  top: 100rpx;
  left: 205rpx;
}
.controlNum text{
  display: inline-block;
  height: 60rpx;
  line-height: 60rpx;
  padding: 0 20rpx;
}
.foodName{
  position: relative;
  display: inline-block;
  /* width: 100%; */
  height: 200rpx;
  top: 100rpx;
  left: 35%;
  font-size: 25px;
  font-weight: 650;
}