.dom{
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.7);
    position: fixed;
    z-index: 2;
    top: 0;
    left: 0;
}
.box{
    width: 600rpx;
    height: 400rpx;
    background-color: white;
    position: relative;
    top: 400rpx;
    left: 80rpx;
    border-radius: 50rpx;
}
.title{
    height: 150rpx;
    line-height: 150rpx;
    font-weight: 550;
    text-align: center;
    font-size: 35rpx;
}
.body{
    height: 80rpx;
    line-height: 80rpx;
    font-size: 35rpx;
    color: #8d8d8d;
    text-align: center;
}
.box button{
    position: relative;
    height: 100rpx;
    line-height: 100rpx;
    font-size: 38rpx;
    font-weight: 550;
    color: #596d96;
    background-color: white;
    bottom: 0;
    border-bottom-left-radius: 50rpx;
    border-bottom-right-radius: 50rpx;
    border-top: 1px solid #8d8d8d;
}