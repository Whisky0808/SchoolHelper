.dom{
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    position: fixed;
    z-index: 4;
    top: 0;
}
.more-adress{
    width: 100%;
    height: 65%;
    background-color: white;
    position: relative;
    top: 40%;
    border-top-left-radius: 50rpx;
    border-top-right-radius: 50rpx;
}
.more-adress .add-adress{
    width: 80%;
    height:110rpx;
    line-height: 110rpx;
    text-align: center;
    background-color: #f5f5f5;
    margin-left: 10%;
    border-radius: 25rpx;
}
.adress{
    width: 100%;
    height: 180rpx;
}
.more-adress .choose-text{
    height: 70rpx;
    line-height: 70rpx;
    text-align: center;
    font-size: 37rpx;
}
.more-adress .all-adress{
    /*background-color: aqua;*/
    height: 70%;
}
.scroll{
    height: 100%;
}

.adress-list .dog{
    float: left;
    height: 100%;
    width: 20%;
    /*background-color: red;*/
}
