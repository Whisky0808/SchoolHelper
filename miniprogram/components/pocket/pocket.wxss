.dom{
    width: 100%;
    height: 100%;
    background-color: rgba(0,0,0,0.5);
    position: fixed;
    z-index: 1;
    top: 0;
}
.box{
    width: 100%;
    height: 800rpx;
    background-color: white;
    position: relative;
    top: 150rpx;
    border-radius: 50rpx;
}
.box .clear-food{
    box-sizing:border-box;
    padding-left: 70%;
    width: 100%;
    height: 12%;
    line-height: 96rpx;
    background-color: #2e86de;
    color: white;
    border-top-left-radius: 50rpx;
    border-top-right-radius: 50rpx;
}

.box .food{
    width: 100%;
    height: 80%;
    /*background-color: cornflowerblue;*/
}
.order{
    float: left;
    width: 100%;
    height: 640rpx;
    box-sizing: border-box;
}
.order .food-list{
    width: 100%;
    height: 190rpx;
    margin-bottom: 10rpx;
    background-color: azure;
}
.food-list image{
    float: left;
    height: 150rpx;
    width: 150rpx;
    margin: 20rpx 20rpx;
}
.food-list .food-text{
    float: left;
    width: 250rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
}
.food-list .food-price-box{
    float: left;
    width: 80rpx;
}
.food-text h3{
    display: inline-block;
    font-size: 40rpx;
    font-weight: 500;
    height: 50rpx;
    line-height: 50rpx;
}
.food-text .food-num{
    display: block;
    margin-top: 35rpx;
    margin-left: 30rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 35rpx;
    margin-right: 20rpx;
    color: #ababab;
}
.food-price{
    display: inline-block;
    margin-top: 63rpx;
    /*margin-right: 30rpx;*/
    margin-left: 100rpx;
    height: 50rpx;
    line-height: 50rpx;
    font-size: 45rpx;
    font-weight: 550;
}

.cut .cutbtn, .add .addbtn{
    width: 60rpx;
    height: 60rpx;
    line-height: 60rpx;
    padding: 5rpx;
    border-radius: 100rpx;
    background-color: #f7c32f;
    margin: 0 6rpx;
}
.cut, .add{
    display: inline-block;
}
.food-num text{
    display: inline-block;
    height: 60rpx;
    line-height: 40rpx;
    margin: 0 15rpx;
}