page{
    background-color: #f4f4f4;
}
.box{
    height: 100%;
    width: 100%;
}
.box .title{
    height: 180rpx;
    line-height: 180rpx;
    font-weight: 550;
    font-size: 50rpx;
    padding-left: 5%;
}
.box .more_order{
    display: inline-block;
    background-color: white;
    height: 200rpx;
    width: 90%;
    margin-left: 5%;
    border-radius: 25rpx;
}
.box .order_detail{
    display: inline-block;
    background-color: white;
    height: 750rpx;
    width: 90%;
    margin-left: 5%;
    margin-top: 10rpx;
    border-radius: 25rpx;
}
.box .order_mes{
    display: inline-block;
    background-color: white;
    height: 600rpx;
    width: 90%;
    margin-left: 5%;
    margin-top: 10rpx;
    border-radius: 25rpx;
}

/*再来一单*/
.more_order image{
    height: 32px;
    width: 32px;
    margin-left: 46%;
}
.more_order .thanks{
    display: inline-block;
    width: 92%;
    margin-left: 4%;
    font-size: 40rpx;
    text-align: center;
    height: 100rpx;
    line-height: 100rpx;
    color: red;
    border-bottom: 2px solid #e9e9e9;
}

/*订单详情*/
.order{
    float: left;
    width: 95%;
    margin-left: 2%;
    height: 610rpx;
    box-sizing: border-box;
    position: relative;
    z-index: 2;
}
.canteen-name{
    height: 110rpx;
    width: 90%;
    line-height: 110rpx;
    font-size: 30rpx;
    padding-left: 30rpx;
}
.order-food .food-list{
    width: 100%;
    height: 190rpx;
    margin-bottom: 10rpx;
    background-color: azure;
}
.food-list image{
    float: left;
    height: 150rpx;
    width: 150rpx;
    margin: 20rpx 20rpx;
}
.food-list .food-text{
    float: left;
    width: 250rpx;
    margin-left: 20rpx;
    margin-top: 20rpx;
}
.food-list .food-price-box{
    float: left;
    width: 80rpx;
}
.food-text h3{
    display: inline-block;
    font-size: 40rpx;
    font-weight: 500;
    height: 50rpx;
    line-height: 50rpx;
}
.food-text .food-num{
    display: block;
    margin-top: 35rpx;
    margin-left: 30rpx;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 35rpx;
    margin-right: 20rpx;
    color: #ababab;
}
.food-price{
    display: inline-block;
    margin-top: 63rpx;
    /*margin-right: 30rpx;*/
    height: 50rpx;
    line-height: 50rpx;
    font-size: 45rpx;
    font-weight: 550;
}

/*订单信息*/
.order_mes .mes_title{
    display: inline-block;
    width: 92%;
    margin-left: 4%;
    font-size: 37rpx;
    height: 100rpx;
    line-height: 100rpx;
    border-bottom: 2px solid #e9e9e9;
}
.order_mes .mes_detail{
    display: inline-block;
    width: 92%;
    margin-left: 4%;
    height: 500rpx;
    /*background-color: aqua;*/
}
.mes_detail .address_title{
    display: inline-block;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
}
.mes_detail .address_detail{
    display: block;
    text-overflow:ellipsis; word-wrap:break-word;
    /*background-color: white;*/
}
.mes_detail .time{
    display: inline-block;
    width: 100%;
    height: 140rpx;
    line-height: 160rpx;
}

.finish_order{
    margin-top: 15rpx;
    width: 300rpx;
    height: 100rpx;
    line-height: 100rpx;
    background-color: #f9ca24;
    color: white;
    font-size: 45rpx;
    font-weight: 550;
}