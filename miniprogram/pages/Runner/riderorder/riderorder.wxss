/*切换栏*/
page{
    background-color: #8ebd9b;
    height: 100%;
}
.state_change{
    height: 110rpx;
    line-height: 110rpx;
    background-color: #0e0d0d;
    font-size: 37rpx;
    font-weight: 700;
    border-bottom: 1px solid #b7b7b7;
}
.state_change .user_interface{
    display: inline-block;
    height: 90rpx;
    width: 200rpx;
    margin-left: 21%;
    color: #b7b7b7;
    text-align: center;
}
.state_change .rider_interface{
    display: inline-block;
    height: 90rpx;
    width: 200rpx;
    margin-left: 34rpx;
    color: #ffffff;
    text-align: center;
    border-bottom: 3px solid #ffffff;
}
.swiper-tab {
    height: 80rpx;
    line-height: 80rpx;
    background:#0e0d0d;
    border-radius: 5rpx;
    color: #fff;
    display: flex;
    position: relative;
    z-index: 2;
    flex-direction: row;
    justify-content: center;
    align-items: center;
    border-bottom: 10rpx solid #f0f1f0;
}

.swiper-box {
    padding-top: -40rpx;
    width: 100%;
    height: 100%;
    background-color:#fff;
}

.swiper-tab-list {
    margin: 0 110rpx;
    padding: 0 8rspx;
    font-size: 37rpx;
    font-weight: 700;
    font-family:Arial, Helvetica, sans-serif;
}

.swiper-tab-liston {
    border-bottom: 2px solid #fff;
    color: #0e0d0d;
    font-size: larger;
    background-color: rgba(255, 255, 255, 0.7);
    border-radius: 18rpx;
    width: 50%;
    font-weight: 700;
    text-align: center;
}


/*订单列表*/
.orderDetails{
    margin-top:10rpx;
    border-radius: 20rpx;
    font-weight: 700;
    color: #fff;
    border-radius: 10rpx;
    height: 300rpx;
    background-color:#576574;
    box-shadow: 0px 1px 4px rgba(0, 0, 0, 0.3),
    0px 0px 20px rgba(0, 0, 0, 0.1) inset;
}
.orderDetails:nth-child(odd) {
    background-color:#10ac84;
    color: #fff;
}

.orderListTitle {
    padding-right: 50rpx;
    margin-left: 10px;

}

.userName {
    color: rgba(255, 255, 255, 0.952);
    font-size: larger;
}

.orderStatus {
    position: relative;
    top: 210rpx;
    float: center;
    font-size: 50rpx;
    font-weight: 900;
    color: #ff9f43;
    z-index: 1;
    /* 要使用的话，position就得是absolute */
    /* transform-origin: 50% 50%;
    transform:rotate(-20deg); */

}

.orderListDetails {
    display: flex;
    height: 250rpx;
}

.orderListDetails .productImg {
    flex: 1;
    height: 180rpx;
    width: 120px;
    margin-top: 20rpx;
    margin-left: 20rpx;
}

.orderListDetails .productImg image {
    width: 100px;
    height: 90%;
}

.orderListDetails .productInfo {
    flex: 4;
    margin: 40rpx 10px 20px 30rpx;
    font-size: 15px;

}

.orderListDetails .productInfo .productTitle {
    height: 100rpx;
    width: 300rpx;
    font-size: 15px;
    overflow: hidden;
    display: -webkit-box;
    -webkit-line-clamp: 2;
    -webkit-box-orient: vertical;
    margin-bottom: 10px;
}

.productCount {
    position: relative;
    height: 100%;
    line-height: 80rpx;

}

.productCount>view {
    float: left;
    margin-right: 30rpx;
    text-align: center;
    color: rgba(255, 255, 255, 0.89);
    background-color: rgba(62, 65, 59, 0.7);
    border-radius: 20rpx;
    height: 70%;

}

.a{
    margin-top: 20rpx;
    margin-left: 3%;
    width: 94%;
    background-color: white;
    border-radius: 5px;
}

.b{
    margin-top: 10px;
    /* background-color: red; */
    border: 1px solid #8ebd9b;
    border-radius: 5px;
    margin-right: 10px;
    flex: 7
}

.c{
    margin-top: 10px;
    /* margin-top: 35px; */
    margin-left: 20px;
    flex: 3
}

.line{
    padding-top: 10px;
    width: 100%;
    font-size: 38rpx;
    display: flex;
}

@-webkit-keyframes slideup {
    from {
        opacity: 0;
        transform: translateY(120px)
    }

    to {
        opacity: 1;
        transform: translateY(0px)
    }
}