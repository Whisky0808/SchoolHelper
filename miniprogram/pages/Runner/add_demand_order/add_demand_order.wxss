.select {
    box-sizing: border-box;
    width: 100%;
    /*height: 86rpx;*/
    height: 100%;
    /* border: 1px solid #efefef; */
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    text-align: center;
    padding: 0 20rpx;
    background-color: #f9ca24;
}

.select_text {
    font-size: 28rpx;
    flex: 1;
    color: rgb(102, 102, 102);
    line-height: 86rpx;
    height: 86rpx;
}
.option_box {
    /* position: absolute; */
    top: 86rpx;
    width: 100%;
    /* border: 1px solid #efefef; */
