.body{
    width: 96%;
    margin-left: 2%;
    background-color: white;
    border-radius: 20rpx;
    margin-top: 20rpx;
}

/*任务标题*/
.title{
    display: inline-block;
    width: 100%;
    height: 100rpx;
    line-height: 100rpx;
    margin-top: 20rpx;
}
.title_first{
    margin-top: 45rpx;
}
.big_title{
    height: 220rpx;
}

.title .tex{
    position: relative;
    display: inline;
    width: 230rpx;
    font-size: 38rpx;
    font-weight: 540;
    height: 80rpx;
    line-height: 80rpx;
    bottom: 30rpx;
    margin-left: 30rpx;
}
.title .big_text{
    bottom: 90rpx;
}

.tex radio-group{
    display: inline-block;
    width: 230rpx;
    height: 80rpx;
}

.title input, .title textarea{
    display: inline-block;
    border: 1rpx solid black;
    width: 450rpx;
    border-radius: 10rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 15rpx;
}
.title .search{
    display: inline-block;
    /*background-color: antiquewhite;*/
    width: 410rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 15rpx;
    border: 1px solid black;
    border-radius: 10rpx;
}
.title .big_input{
    height: 200rpx;
}
.title .select_box{
    display: inline-block;
    border: 1rpx solid black;
    width: 100rpx;
    border-radius: 10rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 15rpx;
}
.title .choose_switch{
    position: relative;
    display: inline-block;
    margin-left: 15rpx;
    bottom: 30rpx;
    left: 30rpx;
}
.title button{
    display: inline-block;
    width: 300rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 30rpx;
    margin-right: 30rpx;
}

.title .choose_time{
    position: relative;
    bottom: 30rpx;
    left: 30rpx;
    display: inline-block;
    width: 450rpx;
    height: 80rpx;
    line-height: 80rpx;
    margin-left: 15rpx;
}

/*下拉框*/
.select_box {
    background: #fff;
    width: 100rpx;
    /* margin: 0 auto; */
    height: 90rpx;
    line-height: 90rpx;
    text-align: left;
    position: relative;
}

.select {
    box-sizing: border-box;
    width: 100%;
    height: 86rpx;
    /* border: 1px solid #efefef; */
    border-radius: 8rpx;
    display: flex;
    align-items: center;
    padding: 0 20rpx;
}

.select_text {
    font-size: 28rpx;
    flex: 1;
    color: rgb(102, 102, 102);
    line-height: 86rpx;
    height: 86rpx;
}
.option_box {
    /* position: absolute; */
    top: 86rpx;
    width: 100%;
    /* border: 1px solid #efefef; */
    box-sizing: border-box;
    height: 0;
    overflow-y: auto;
    border-top: 0;
    background: #fff;
    transition: height 0.3s;
    z-index: 100;
}

.option {
    display: block;
    line-height: 40rpx;
    font-size: 28rpx;
    border-bottom: 1px solid #efefef;
    padding: 10rpx;
    color: rgb(102, 102, 102);
}

.search .search_icon{
    display: inline-block;
    width: 80rpx;
    height: 80rpx;
    text-align: center;
    line-height: 100rpx;
}
.search .search_btn{
    position: absolute;
    display: inline-block;
    width: 320rpx;
    height: 80rpx;
    /*background-color: #8ebd9b;*/
    border: 0rpx;

}
