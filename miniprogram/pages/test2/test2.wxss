page{
    background-color: #2b2b2b;
    margin: 0;
    padding: 0;
}
.all{
    height: 2000rpx;
}
.all .add_demand{
    height: 2000rpx;
}

.bigtitle{
    display: inline-block;
    background-color: white;
    width: 300rpx;
    height: 150rpx;
    line-height: 150rpx;
    font-size: 50rpx;
    font-weight: 550;
    text-align: center;
    margin-top: 20rpx;
    margin-left: 30%;
    border-radius: 30rpx;
