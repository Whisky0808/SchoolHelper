.principle {
    height: 100%;
    width: 100%;
    color: #fff;
}

page {
    height: 100%;
}

.bg_cover {
    height: 100%;
    width: 100%;
}

.textarea {
    position: relative;
    font-size: rpx;
    top: 120rpx;
    left: 10%;
    height: 700rpx;
    width: 560rpx;
    word-wrap: break-word;
    line-height: 200%;
    /*自动换行*/

}

text {
    position: relative;
    top: 90rpx;
    left: 10%;
    height: 700rpx;
    width: 400rpx;
    word-wrap: break-word;
    /*自动换行*/
    font-size: 70rpx;
    font-weight: 900;
}
.inputPassword{
    border-style: solid;
    border-color: black;
    border-radius: 20rpx;
    height: 70rpx;
    margin-top: 30rpx;
}

button {
    border: 0 solid #0010ae;
    background-color: #1f2afe;
    color: #fff;
    font-size: 120%;
    padding: 8px 16px;
    -webkit-appearance: none;
    box-shadow: 0 8px 17px rgba(0, 0, 0, 0.2);
    position: relative;
    right: 70rpx;
    
}
.screen2-button-content{
    text-align: center;
    display: inline;
}

.screen {
    position: absolute;
    top: 0;
    bottom: 0;
    left: 0;
    right: 0;
    padding: 16px;
    -webkit-overflow-scrolling: touch;
}

.protocol {
    position: relative;
    padding: 16px;
    background-color: #fff;
    width: 100%;
    height: 100%;
    box-sizing: border-box;
    /*带边框的框*/
}
.inside{
    position: relative;
    padding: 16px;
    background-color: #fff;
    width: 700rpx;
    height: 100%;
    box-sizing: border-box;

}

.title {
    height: 65px;
    font-size: 2em;
    font-weight: bold;
    text-align: center;
    margin: 10px 0;
}

.screen2-button {
    display: block;
    margin: 24px auto;
}

/* 假页进入的动画 */
.paragraph {
    -webkit-transition: transform ease-in-out 300ms;
    transition: transform ease-in-out 300ms;
    -webkit-transform: scale(0.6);
    transform: scale(0.6);
    word-wrap: break-word;
}

.enter.paragraph {
    transform: none;
}